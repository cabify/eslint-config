{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "group:allNonMajor",
    "schedule:weekends",
    ":pinOnlyDevDependencies:"
  ],
  "packageRules": [
    {
      "updateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "groupName": "@cabify",
      "packagePatterns": [
        "^@cabify"
      ],
      "schedule": [
        "after 10pm every weekday",
        "before 5am every weekday",
        "every weekend"
      ]
    }
  ]
}